{
    "require": {
        "vlucas/phpdotenv": "^5.3"
    },
    "scripts": {
        "setup": [
            "composer install",
            "npm run build",
            "git init",
            "heroku login"
        ],
        "dev": [
            "yarn start"
        ],
        "deploy": [
            "npm run build",
            "git add .",
            "git commit -m'Application update'",
            "git push -f heroku master"
        ]
    }
}
